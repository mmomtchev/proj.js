{
  "name": "proj.js-test",
  "version": "1.0.0",
  "description": "Unit tests for proj.js",
  "type": "module",
  "scripts": {
    "test": "npm run test:nodejs && npm run test:browser",
    "test:nodejs": "npx mocha",
    "test:browser": "cd browser && npx webpack --mode=production && npx karma start ./browser/karma.conf.cjs",
    "test:integration": "npx mocha integration.test.ts",
    "start": "cd browser && npx webpack serve --mode=production",
    "gcov": "mkdir -p coverage && cd coverage && gcov -o ../build/native/proj.node.p/swig_proj_wrap.cc.o ../swig/proj_wrap.cc",
    "lcov": "npx c8 report --reporter=text-lcov > coverage/tests.lcov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmomtchev/proj.js.git"
  },
  "keywords": [
    "proj.js"
  ],
  "author": "Momtchil Momtchev <momtchil@momtchev.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.6",
    "c8": "^10.1.3",
    "chai": "^6.0.1",
    "karma": "^6.4.3",
    "karma-chrome-launcher": "^3.2.0",
    "karma-mocha": "^2.0.1",
    "karma-verbose-reporter": "^0.0.8",
    "mocha": "github:mmomtchev/mocha#mmom",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.0.4"
  }
}
